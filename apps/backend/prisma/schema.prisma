generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  email     String @unique
  password  String?
  name      String
  roleId    String
  createdAt DateTime @default(now())
  @@map("users")
}

model Role {
  id   String @id @default(cuid())
  name String @unique
  @@map("roles")
}

model Setting {
  id   String @id @default(cuid())
  key  String @unique
  value Json
  @@map("settings")
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String
  topic       String?
  category    String?
  type        String?  // pdf/doc/image
  fileKey     String   // Storage path
  fileUrl     String?  // Signed URL
  metadata    Json?    // Extra fields
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   Int      // userId
  user        User     @relation(fields: [createdBy], references: [id])
}

model Letter {
  id        String @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  @@map("letters")
}

model Course {
  id        String @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
  @@map("courses")
}
